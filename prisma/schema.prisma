// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id       Int      @id @default(autoincrement())
  email    String?  @unique
  name     String?  @unique
  account  String?  @unique
  role     Role     @default(USER)
  posts    Post[]
  profile  Profile?
  password String
  salt     String?
}

model Profile {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

// 食谱
model Post {
  id          Int          @id @default(autoincrement())
  createdAt   DateTime     @default(now())
  title       String
  content     String
  author      User         @relation(fields: [authorId], references: [id])
  authorId    Int
  ingredients Ingredient[]
}

// 食材一级分类
model IngredientType {
  id                 Int                 @id @default(autoincrement())
  name               String              @unique
  ingredientSubTypes IngredientSubType[]
}

// 食材二级分类
model IngredientSubType {
  id               Int            @id @default(autoincrement())
  name             String         @unique
  ingredientType   IngredientType @relation(fields: [ingredientTypeId], references: [id])
  ingredientTypeId Int
  ingredients      Ingredient[]
}

// 食材标签
model Ingredient {
  id                  Int               @id @default(autoincrement())
  name                String            @unique
  emoji               String
  posts               Post[]
  ingredientSubType   IngredientSubType @relation(fields: [ingredientSubTypeId], references: [id])
  ingredientSubTypeId Int
}
